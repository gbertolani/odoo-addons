<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="MapMultiDrawing.BtnDelete">
        <button class="btn btn-default" style="margin-bottom: 7px;padding: 0px 5px 5px 3px;; width: 22px; height: 22px; background-color: white; color: #686767;"
            type="button" data-toggle="tooltip" data-placement="bottom" title="Press this button to delete the selected shape">
            <i class="fa fa-trash-o fa-lg"></i>
        </button>
    </t>

    <t t-name="MapMultiDrawing.BtnDrawingColorPicker">
        <div class="color-picker-container" style="margin-bottom: 7px;padding: 2px 4px 5px 4px;; width: 22px; height: 22px; background-color: white; color: #686767;">
            <div class="btn-color-picker" />
        </div>
    </t>

    <t t-name="WidgetDrawing.Map">
        <div class="o_map_container">
            <div class="o_map_view"></div>
        </div>
    </t>

    <t t-name="MapView.buttons">
        <div class="o_list_buttons">
            <div class="o_form_marker_buttons_actions">
                <button type="button" class="btn btn-primary o-map-button-center-map">
                    <t t-esc="_t('Center Map')"/>
                </button>
                <table class="o_group o_inner_group">
                    <tbody>
                        <tr>
                            <td style="width: 25%;">
                                <input class="o_field_number o_field_widget o_input"
                                    style="display: inline-block;"
                                    name="map_latitude"
                                    t-att-placeholder="_t('Latitude')"
                                    type="text"
                                    id="map_latitude"/>
                            </td>
                            <td style="width: 25%;">
                                <input class="o_field_number o_field_widget o_input"
                                    style="display: inline-block;"
                                    name="map_longitude"
                                    t-att-placeholder="_t('Longitude')"
                                    type="text"
                                    id="map_longitude"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </t>

    <t t-name="FormView.marker_edit_button">
    </t>
</templates>
